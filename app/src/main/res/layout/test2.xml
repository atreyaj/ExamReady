<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/theme_text_color_white"
    >

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_alignParentTop="true"
    android:layout_alignParentRight="true"
    android:background="@color/theme_color_green"
    android:id="@+id/watchContainer"

    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00:00"
        android:textSize="18sp"
        android:textColor="@color/theme_text_color_white"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:id="@+id/timeWatch"
        />

    </LinearLayout>
<ScrollView
    android:id="@+id/scrollView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_marginTop="20dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
         >

        <TextView
            android:id="@+id/textViewQuestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="An economy in which both the public and private sectors contribute to economic growth is known as"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <RadioButton
            android:id="@+id/radioButtonOption1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textViewQuestion"
            android:layout_below="@+id/textViewQuestion"
            android:layout_marginTop="24dp"
            android:text=" feudal economy" />

        <RadioButton
            android:id="@+id/radioButtonOption2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/radioButtonOption1"
            android:layout_marginTop="18dp"
            android:text=" capitalist economy" />

        <RadioButton
            android:id="@+id/radioButtonOption3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/radioButtonOption2"
            android:layout_below="@+id/radioButtonOption2"
            android:layout_marginTop="17dp"
            android:text=" socialist economy" />

        <RadioButton
            android:id="@+id/radioButtonOption4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/radioButtonOption3"
            android:layout_below="@+id/radioButtonOption3"
            android:layout_marginTop="18dp"
            android:text=" mixed economy" />

        <Button
            android:id="@+id/buttonNextPage"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/submitButton"
            android:layout_alignBottom="@+id/submitButton"
            android:background="@drawable/test2buttonshape"
            android:layout_alignRight="@+id/textViewQuestion"
            android:text="Next" />

        <Button
            android:id="@+id/submitButton"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/radioButtonOption4"
            android:layout_marginRight="14dp"
            android:layout_marginTop="63dp"
            android:layout_toLeftOf="@+id/buttonTimeMode"
            android:background="@drawable/test2buttonshape"
            android:text="Pre" />

        <ProgressBar
            android:id="@+id/progressBarFreeform"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_alignLeft="@+id/submitButton"
            android:layout_below="@+id/buttonNextPage"
            android:layout_marginTop="33dp" />

    </RelativeLayout>

</ScrollView>
</RelativeLayout>