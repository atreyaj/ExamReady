<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green_color"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin_login">

    <ScrollView
        android:id="@+id/scrollregisterpage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chatbtneventdetail"
        android:layout_centerHorizontal="true">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/firstName"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/textboxheight"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="@dimen/margin5dp"
                android:ems="10"
                android:hint="First name"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:textColorHint="#ffffff">

                <requestFocus />
            </EditText>

            <EditText
                android:id="@+id/lastName"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/textboxheight"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/firstName"
                android:layout_marginBottom="@dimen/margin5dp"
                android:ems="10"
                android:hint="Last name"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:textColorHint="#ffffff" />

            <EditText
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/textboxheight"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/lastName"
                android:layout_marginBottom="@dimen/margin5dp"
                android:ems="10"
                android:hint="Email address"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:textColorHint="#ffffff" />

            <EditText
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/textboxheight"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/email"
                android:layout_marginBottom="@dimen/margin5dp"
                android:ems="10"
                android:hint="Username"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:textColorHint="#ffffff" />

            <EditText
                android:id="@+id/password"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/textboxheight"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/username"

                android:layout_marginBottom="@dimen/margin5dp"
                android:ems="10"
                android:hint="Password"
                android:imeOptions="actionNext"
                android:inputType="textPassword"
                android:textColorHint="#ffffff" />

            <EditText
                android:id="@+id/confirmPassword"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/textboxheight"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/password"
                android:layout_marginBottom="@dimen/margin15dp"
                android:ems="10"
                android:hint="Confirm password"
                android:imeOptions="actionNext"
                android:inputType="textPassword"
                android:textColorHint="#ffffff" />

            <Button
                android:id="@+id/signupButton"
                android:layout_width="match_parent"
                android:layout_height="@dimen/textboxheight"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/confirmPassword"
                android:layout_marginBottom="@dimen/margin15dp"
                android:background="@drawable/oragebuttonback"
                android:text="Create an account"
                android:textColor="#ffffff" />
        </RelativeLayout>
    </ScrollView>

    <ImageView
        android:id="@+id/chatbtneventdetail"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/activity_vertical_margin_login"
        android:scaleType="fitCenter"
        android:src="@drawable/icon" />

</RelativeLayout>
