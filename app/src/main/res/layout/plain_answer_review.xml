<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/theme_text_color_white"
    >
    <TextView
        android:id="@+id/resultStatus"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:background="@color/theme_color_green"
        android:textColor="@color/theme_text_color_white"
        android:gravity="center"
        android:textSize="18sp"
        android:text="Correct"
        />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_centerInParent="true"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            >

            <TextView
                android:id="@+id/textViewQuestion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:text="An economy in which both the public and private sectors contribute to economic growth is known as"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <ImageView
                android:id="@+id/markFirst"
               android:layout_width="30dp"
               android:layout_height="30dp"
               android:src="@drawable/right"
                android:layout_marginTop="24dp"
                android:layout_alignLeft="@+id/textViewQuestion"
                android:layout_below="@+id/textViewQuestion"
                android:visibility="invisible"
                />
            <RadioButton
                android:id="@+id/radioButtonOption1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/markFirst"
                android:layout_below="@+id/textViewQuestion"
                android:layout_marginTop="24dp"
                android:text=" feudal economy"
                />

            <ImageView
                android:id="@+id/markSecond"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/right"
                android:layout_marginTop="24dp"
                android:layout_alignLeft="@id/textViewQuestion"
                android:layout_below="@id/radioButtonOption1"
                android:visibility="invisible"
                />
            <RadioButton
                android:id="@+id/radioButtonOption2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/radioButtonOption1"
                android:layout_toRightOf="@id/markSecond"
                android:layout_marginTop="24dp"
                android:gravity="top"
                android:text=" capitalist economy where every thing messes around at" />

            <ImageView
                android:id="@+id/markThird"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/right"
                android:layout_marginTop="24dp"
                android:layout_alignLeft="@id/textViewQuestion"
                android:layout_below="@id/radioButtonOption2"
                android:visibility="invisible"
                />
            <RadioButton
                android:id="@+id/radioButtonOption3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/markThird"
                android:layout_below="@+id/radioButtonOption2"
                android:layout_marginTop="24dp"
                android:text=" socialist economy" />
            <ImageView
                android:id="@+id/markFourth"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/right"
                android:layout_marginTop="24dp"
                android:layout_alignLeft="@id/textViewQuestion"
                android:layout_below="@id/radioButtonOption3"
                android:visibility="invisible"
                />

            <RadioButton
                android:id="@+id/radioButtonOption4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/markFourth"
                android:layout_below="@+id/radioButtonOption3"
                android:layout_marginTop="24dp"
                android:text=" mixed economy" />


            <Button
                android:id="@+id/viewExplanation"
                android:layout_width="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/radioButtonOption4"
                android:layout_marginRight="20dp"
                android:layout_marginTop="30dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/test2buttonshape"
                android:text="View Explanation" />
            <Button
                android:id="@+id/buttonNextPage"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/submitButton"
                android:layout_alignBottom="@+id/submitButton"
                android:background="@drawable/test2buttonshape"
                android:layout_alignRight="@+id/textViewQuestion"
                android:text="Next" />

            <Button
                android:id="@+id/submitButton"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/viewExplanation"
                android:layout_marginRight="14dp"
                android:layout_marginTop="30dp"
                android:layout_toLeftOf="@+id/buttonTimeMode"
                android:background="@drawable/test2buttonshape"
                android:text="Pre" />

        </RelativeLayout>

    </ScrollView>
</RelativeLayout>
