<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parentlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_text_color_white"
    >

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_alignParentTop="true"
        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin_login" >

            <TextView
                android:id="@+id/textViewQuestion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:text="An economy in which both the public and private sectors contribute to economic growth is known as"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <RadioButton
                android:id="@+id/radioButtonOption1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textViewQuestion"
                android:layout_below="@+id/textViewQuestion"
                android:layout_marginTop="24dp"
                android:text=" feudal economy" />

            <RadioButton
                android:id="@+id/radioButtonOption2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/radioButtonOption1"
                android:layout_marginTop="18dp"
                android:text=" capitalist economy" />

            <RadioButton
                android:id="@+id/radioButtonOption3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/radioButtonOption2"
                android:layout_below="@+id/radioButtonOption2"
                android:layout_marginTop="17dp"
                android:text=" socialist economy" />

            <RadioButton
                android:id="@+id/radioButtonOption4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/radioButtonOption3"
                android:layout_below="@+id/radioButtonOption3"
                android:layout_marginTop="18dp"
                android:text=" mixed economy" />

            <Button
                android:id="@+id/buttonSubmitpage"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/textViewQuestion"
                android:layout_below="@+id/radioButtonOption4"
                android:layout_marginTop="57dp"
                android:background="@drawable/test2buttonshape"
                android:text="Submit" />
        </RelativeLayout>
    </ScrollView>
    <RelativeLayout
        android:id="@+id/relativelayoutlady"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:alpha="0.9"
        android:background="#000"
        android:visibility="gone" >
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true" >

        <ImageView
            android:id="@+id/imageViewMiDDleStick"
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/imageViewUpsTick"
            android:src="@drawable/middle" />

        <ImageView
            android:id="@+id/imageViewDowNsTick"
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/imageViewUpsTick"
            android:src="@drawable/down" />

        <ImageView
            android:id="@+id/imageViewUpsTick"
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="110dp"
            android:src="@drawable/up" />

        <RelativeLayout
            android:id="@+id/dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:layout_alignBottom="@+id/imageViewMiDDleStick"
            android:layout_marginBottom="16dp"
            android:layout_toLeftOf="@+id/imageViewMiDDleStick"
            android:background="#858484" >

            <Button
                android:id="@+id/buttonContinue"
                android:layout_width="120dp"
                android:layout_height="35dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="5dp"
                android:background="#aa3b38"
                android:text="continue"
                android:textSize="12sp" />

            <Button
                android:id="@+id/buttonTryAgain"
                android:layout_width="120dp"
                android:layout_height="35dp"
                android:layout_above="@+id/buttonExPlanaTion"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="5dp"
                android:background="#aa3b38"
                android:text="Try again"
                android:textSize="12sp" />

            <Button
                android:id="@+id/buttonExPlanaTion"
                android:layout_width="120dp"
                android:layout_height="35dp"
                android:layout_above="@+id/buttonCoNtInue"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="5dp"
                android:background="#aa3b38"
                android:text="View Explanation"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/imageViewCaNcel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/wrong" />

            <TextView
                android:id="@+id/textViewincorrect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/imageViewCaNcel"
                android:layout_centerHorizontal="true"
                android:text="incorrect"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#ffffff"
                android:textSize="16sp" />

            <RelativeLayout
                android:id="@+id/relativeLayout1"
                android:layout_width="100dp"
                android:layout_height="1dp"
                android:layout_below="@+id/textViewincorrect"
                android:layout_centerHorizontal="true"
                android:background="#005e5e" >
            </RelativeLayout>

            <TextView
                android:id="@+id/textViewpleasetryagain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textViewthatisincorect"
                android:layout_below="@+id/textViewthatisincorect"
                android:text="Please try again"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/textViewthatisincorect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/buttonTryAgain"
                android:layout_below="@+id/relativeLayout1"
                android:text="That is incorrect.  "
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#ffffff" />
        </RelativeLayout>






    </RelativeLayout>


</RelativeLayout>











