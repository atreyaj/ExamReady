<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/projectback"
    android:id="@+id/Main_Layout_Payments">

    <ScrollView
        android:id="@+id/mscroll_Payment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </ScrollView>

    <TextView
        android:id="@+id/textView_Pay_for"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView_Icon"
        android:layout_centerHorizontal="true"
        android:text="Pay for"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#fff"
        />

    <ImageView
        android:id="@+id/imageView_Icon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:paddingTop="10dp"
        android:src="@drawable/icon" />

    <RelativeLayout
        android:id="@+id/Main_Layouts_Buttons"
        android:layout_width="330dp"
        android:layout_height="350dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textView_Pay_for"
        android:layout_marginTop="14dp"

        >

        <Button
            android:id="@+id/button_1_Month"
            android:layout_width="135dp"
            android:layout_height="140dp"
            android:layout_alignBottom="@+id/button_2_Month"
            android:layout_alignLeft="@+id/button_3_Month"
            android:background="@drawable/shape_button_2_week"
            android:text="$1.99/week"
            android:textColor="#ffffff"
            android:textStyle="italic" />

        <Button
            android:id="@+id/button_2_Month"
            android:layout_width="135dp"
            android:layout_height="140dp"
            android:layout_alignLeft="@+id/button_4_Month"
            android:layout_alignParentTop="true"
            android:layout_marginTop="22dp"
            android:background="@drawable/button_4_week"
            android:text="$3.49/2 weeks"
            android:textColor="#ffffff"
            android:textStyle="italic" />

        <Button
            android:id="@+id/button_3_Month"
            android:layout_width="135dp"
            android:layout_height="140dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/button_1_Month"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="14dp"
            android:background="@drawable/button_6_week"
            android:paddingBottom="10dp"
            android:paddingLeft="5dp"
            android:text="$6.99/month"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/button_4_Month"
            android:layout_width="135dp"
            android:layout_height="140dp"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/button_3_Month"
            android:layout_marginRight="16dp"
            android:background="@drawable/button_8_week"
            android:paddingRight="5dp"
            android:text="$21.99/4 months"
            android:textColor="#ffffff"
            android:textStyle="italic" />

    </RelativeLayout>

</RelativeLayout>