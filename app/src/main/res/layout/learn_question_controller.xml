<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/theme_text_color_white"
    >


    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            >

            <TextView
                android:id="@+id/textViewQuestion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:text="An economy in which both the public and private sectors contribute to economic growth is known as"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <ImageView
                android:id="@+id/questionImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="200dp"
                android:scaleType="fitCenter"
                android:paddingTop="10dp"
                android:layout_below="@+id/textViewQuestion"
                android:src="@drawable/graph"
                android:visibility="gone"
                />


            <RadioButton
                android:id="@+id/radioButtonOption1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textViewQuestion"
                android:layout_below="@+id/questionImage"
                android:layout_marginTop="24dp"
                android:text=" feudal economy" />
            <ImageView
                android:id="@+id/choiceOneImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="200dp"
                android:scaleType="fitCenter"
                android:paddingTop="10dp"
                android:layout_below="@id/radioButtonOption1"
                android:src="@drawable/graph"
                android:visibility="gone"
                />

            <RadioButton
                android:id="@+id/radioButtonOption2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/choiceOneImage"
                android:layout_marginTop="18dp"
                android:text=" capitalist economy" />

            <ImageView
                android:id="@+id/choiceTwoImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="200dp"
                android:scaleType="fitCenter"
                android:paddingTop="10dp"
                android:layout_below="@id/radioButtonOption2"
                android:src="@drawable/graph"
                android:visibility="gone"
                />
            <RadioButton
                android:id="@+id/radioButtonOption3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/radioButtonOption2"
                android:layout_below="@+id/choiceTwoImage"
                android:layout_marginTop="17dp"
                android:text=" socialist economy" />
            <ImageView
                android:id="@+id/choiceThreeImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="200dp"
                android:scaleType="fitCenter"
                android:paddingTop="10dp"
                android:layout_below="@id/radioButtonOption3"
                android:src="@drawable/graph"
                android:visibility="gone"
                />
            <RadioButton
                android:id="@+id/radioButtonOption4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/radioButtonOption3"
                android:layout_below="@+id/choiceThreeImage"
                android:layout_marginTop="18dp"
                android:text=" mixed economy" />
            <ImageView
                android:id="@+id/choiceFourImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="200dp"
                android:scaleType="fitCenter"
                android:paddingTop="10dp"
                android:layout_below="@id/radioButtonOption4"
                android:src="@drawable/graph"
                android:visibility="gone"
                />


            <Button
                android:id="@+id/submitButton"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/choiceFourImage"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="63dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/test2buttonshape"
                android:text="Submit" />
        </RelativeLayout>

    </ScrollView>


</RelativeLayout>